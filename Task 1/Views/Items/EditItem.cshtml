@model Task_1.VM.ItemVm
<form asp-action="Update" method="post" class="form-horizontal">
    <input type="text" hidden asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-2">Name</label>
        <div class="col-md-4">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label col-md-2">Description</label>
        <div class="col-md-4">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label col-md-2">Price</label>
            <div class="col-md-4">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Update Item</button>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="form-group mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}





