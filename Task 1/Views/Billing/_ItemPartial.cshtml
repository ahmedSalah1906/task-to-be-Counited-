@model Task_1.VM.BillingItemVm

<div class="item-row">
    
    <input type="hidden" asp-for="Id"; />
    <label>Item:</label>
    <select asp-for="ItemId" asp-items="Model.Items" class="form-control item-select"></select>

    <label>Price:</label>
    <input type="text" asp-for="Price" class="form-control item-price" value="0" readonly />

    <label>Quantity:</label>
    <input type="number" asp-for="Quntity" class="form-control item-quantity" value="1" min="1" />

    <br />
</div>
